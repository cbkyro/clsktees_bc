{"components/wishlist/wishlist-form":"{{> components/common/modal-close}}\n\n<div class=\"modal-body account-wrapper\">\n  <div class=\"account-header\">\n    <h1 class=\"account-heading\">\n      {{lang 'core.account.wishlists.new'}}\n    </h1>\n  </div>\n  <div class=\"wishlist-add\">\n    <header class=\"wishlist-header\">\n      {{#if forms.wishlist.errors}}\n        {{> core/alerts/alert-error forms.wishlist.errors}}\n      {{/if}}\n    </header>\n\n    <form\n      class=\"form wishlist-form\"\n      action=\"{{urls.account.wishlists.add}}&product_id={{product.id}}\"\n      method=\"post\"\n      data-validated-form\n      data-add-wishlist-form\n    >\n      <input type=\"hidden\" name=\"submit\">\n\n      {{> core/forms/common/text\n        required=true\n        name=\"wishlistname\"\n        id=\"wishlistname\"\n        value=forms.wishlist.name\n        label=(lang 'core.account.wishlists.wishlist_name')\n      }}\n\n      <div class=\"form-field form-field-checkbox\">\n        <div class=\"form-field-control\">\n          <label class=\"form-label\">\n            <input\n              class=\"form-checkbox\"\n              name=\"publicwishlist\"\n              type=\"checkbox\"\n              {{#if forms.wishlist.is_public}}checked{{/if}}\n              aria-required=\"false\"\n            >\n            <span class=\"form-label-text\">\n              {{lang 'core.account.wishlists.make_public'}}\n            </span>\n          </label>\n        </div>\n      </div>\n\n      <div class=\"form-actions\">\n        {{#if forms.wishlist.id}}\n          <input\n            type=\"submit\"\n            class=\"button account-button-primary\"\n            value=\"{{lang 'core.account.wishlists.save'}}\"\n        >\n          <input type=\"hidden\" name=\"wishlistid\" value=\"{{forms.wishlist.id}}\">\n        {{else}}\n          <button\n            type=\"submit\"\n            class=\"button account-button-primary button-progress spinner\"\n          >\n            <span class=\"button-text\">\n              {{lang 'core.account.wishlists.create'}}\n            </span>\n          </button>\n        {{/if}}\n      </div>\n    </form>\n  </div>\n</div>\n","components/common/modal-close":"<a href=\"#\" class=\"modal-close\" aria-label=\"{{lang 'cart.modal_close'}}\">\n  <span aria-hidden=\"true\">\n    <svg class=\"icon icon-close\"><use xlink:href=\"#icon-close\" /></svg>\n  </span>\n</a>\n","core/alerts/alert-error":"<div class=\"alert alert-error\">\n  {{#if dismissable}}<a class=\"alert-dismiss\">&times;</a>{{/if}}\n\n  <div class=\"alert-message\">\n    {{#if message}}\n      {{{message}}}\n    {{else}}\n      {{{this}}}\n    {{/if}}\n  </div>\n</div>\n","core/forms/common/text":"\n<div class=\"form-field form-field-common form-field-text {{#if required}} form-required{{/if}}\" id=\"{{id}}\">\n  <label class=\"form-label\">\n    <span class=\"form-field-title\">\n      {{label}}\n      {{#if required}}<span class=\"required-text\">{{lang 'common.required'}}</span>{{/if}}\n    </span>\n    <span class=\"form-field-control\">\n      <input class=\"form-input\"\n        id=\"input-{{id}}\"\n        name=\"{{name}}\"\n        type=\"text\"\n        placeholder=\"{{prefill}}\"\n        {{#if value}}value=\"{{value}}\"{{/if}}\n        {{#if private_id}}data-field-type=\"{{private_id}}\"{{/if}}\n        {{#if required}}required{{/if}}\n        aria-required=\"{{required}}\">\n    </span>\n  </label>\n</div>\n"}