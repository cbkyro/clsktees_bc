{"components/common/newsletter-signup":"<div class=\"newsletter-signup\">\n  <form\n    class=\"form subscription-form\"\n    action=\"{{urls.subscribe.action}}\"\n    method=\"post\"\n    data-validated-form\n  >\n    <input type=\"hidden\" name=\"action\" value=\"subscribe\">\n    <input type=\"hidden\" name=\"nl_first_name\" value=\"bc\">\n    <input type=\"hidden\" name=\"check\" value=\"1\">\n    <div class=\"form-field form-inline\">\n      <label class=\"sr-only\" for=\"nl_email\">\n        {{lang 'newsletter.email_placeholder'}}\n      </label>\n      <input\n        class=\"form-input form-input-short\"\n        id=\"nl_email\"\n        name=\"nl_email\"\n        type=\"email\"\n        value=\"{{customer.email}}\"\n        placeholder=\"{{lang 'newsletter.email_placeholder'}}\"\n        required\n      >\n    </div>\n    <button class=\"submit\" type=\"submit\">\n      <svg class=\"icon icon-arrow-right\">\n        <use xlink:href=\"#icon-arrow-right\" />\n      </svg>\n    </button>\n  </form>\n  {{#if settings.show_newsletter_summary}}\n    <div class=\"newsletter-summary\">{{settings.newsletter_summary}}</div>\n  {{/if}}\n</div>\n"}