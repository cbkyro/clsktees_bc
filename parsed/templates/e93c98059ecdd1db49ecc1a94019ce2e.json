if sort '===' 'priceasc'}}selected{{/if}}\n            >\n              {{lang 'common.sorter.price_asc'}}\n            </option>\n            <option\n              value=\"pricedesc\"\n              {{#if sort '===' 'pricedesc'}}selected{{/if}}\n            >\n              {{lang 'common.sorter.price_desc'}}\n            </option>\n          </select>\n        </div>\n    </div>\n  </form>\n</div>\n\n{{!TODO: Show # per page}}\n"}